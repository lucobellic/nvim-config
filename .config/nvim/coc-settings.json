{
  "suggest.autoTrigger": "none",
  "snippets.textmateSnippetsRoots": [
    "~/.config/snippets"
  ],
  "explorer.icon.enableVimDevicons": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "clangd.enabled": true,
  "clangd.semanticHighlighting": true,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--enable-config"
  ],
  "clangd.path": "/opt/clangd_12.0.0-rc2/bin/clangd",
  "rust.clippy_preference": "on",
  "rust.all_features": true,
  "languageserver": {
    "vimls": {
      "command": "vim-language-server",
      "args": [
        "--stdio"
      ],
      "initializationOptions": {
        "iskeyword": "@,48-57,_,192-255,-#",
        "vimruntime": "",
        "runtimepath": "",
        "diagnostic": {
          "enable": true
        },
        "indexes": {
          "runtimepath": true,
          "gap": 100,
          "count": 3,
          "projectRootPatterns": [
            ".git",
            "autoload",
            "plugin"
          ]
        },
        "suggest": {
          "fromVimruntime": true,
          "fromRuntimepath": false
        }
      },
      "filetypes": [
        "vim"
      ]
    }
  }
}

